$(document).ready(function() {
    console.log("DOM fully loaded and parsed");
});

// Use ProseMirror globals directly from the demo bundle

window.initProseMirror = function(containerId) {
    var container = document.getElementById(containerId);
    if (!container) return;

    // Create a simple document
    var doc = DOMParser.fromSchema(schema).parse(document.createElement("div"));

    // Create the editor state
    var state = EditorState.create({
        doc: doc,
        plugins: exampleSetup({ schema: schema })
    });

    // Create the editor view
    new EditorView(container, { state: state });
};

document.addEventListener('DOMContentLoaded', function() {
    if (document.getElementById('editor')) {
        window.initProseMirror('editor');
    }
});

